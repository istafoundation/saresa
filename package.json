{
  "name": "ista-english",
  "version": "1.0.93",
  "main": "expo-router/entry",
  "repository": {
    "type": "git",
    "url": "https://github.com/istafoundation/saresa"
  },
  "config": {
    "apkName": "ista-english"
  },
  "scripts": {
    "start": "env-cmd -f .env.development expo start",
    "android": "cross-env APP_VARIANT=dev env-cmd -f .env.development expo run:android",
    "android:prod": "env-cmd -f .env.production cross-env EXPO_NO_DOTENV=1 expo run:android",
    "ios": "cross-env APP_VARIANT=dev env-cmd -f .env.development expo run:ios",
    "ios:prod": "env-cmd -f .env.production cross-env EXPO_NO_DOTENV=1 expo run:ios",
    "web": "env-cmd -f .env.development expo start --web",
    "version:patch": "npm version patch --no-git-tag-version && node ./scripts/sync-version.js",
    "version:minor": "npm version minor --no-git-tag-version && node ./scripts/sync-version.js",
    "version:major": "npm version major --no-git-tag-version && node ./scripts/sync-version.js",
    "build:dev": "cross-env APP_VARIANT=dev env-cmd -f .env.development node ./scripts/build-dev.js",
    "dev:patch": "npm version patch --no-git-tag-version && node ./scripts/sync-version.js && npm run build:dev",
    "dev:minor": "npm version minor --no-git-tag-version && node ./scripts/sync-version.js && npm run build:dev",
    "dev:major": "npm version major --no-git-tag-version && node ./scripts/sync-version.js && npm run build:dev",
    "build:release": "env-cmd -f .env.production npm run version:patch && node ./scripts/build-release.js",
    "build:release:minor": "env-cmd -f .env.production npm run version:minor && node ./scripts/build-release.js",
    "build:release:major": "env-cmd -f .env.production npm run version:major && node ./scripts/build-release.js",
    "sync:content": "node ./scripts/sync-content.js",
    "sync:full": "node ./scripts/sync-full.js",
    "convex:dev": "node ./scripts/convex-dev.js"
  },
  "dependencies": {
    "@expo/vector-icons": "^15.0.3",
    "@react-native-community/slider": "^5.0.1",
    "@shopify/flash-list": "2.0.2",
    "@types/fast-levenshtein": "^0.0.4",
    "babel-preset-expo": "^54.0.9",
    "compromise": "^14.14.5",
    "convex": "^1.31.4",
    "expo": "~54.0.31",
    "expo-application": "^7.0.8",
    "expo-audio": "~1.1.1",
    "expo-auth-session": "^7.0.10",
    "expo-blur": "~15.0.8",
    "expo-constants": "~18.0.13",
    "expo-crypto": "^15.0.8",
    "expo-file-system": "^19.0.21",
    "expo-haptics": "~15.0.8",
    "expo-intent-launcher": "^13.0.8",
    "expo-linear-gradient": "~15.0.8",
    "expo-linking": "~8.0.11",
    "expo-router": "~6.0.21",
    "expo-secure-store": "^15.0.8",
    "expo-speech-recognition": "^3.0.1",
    "expo-splash-screen": "~31.0.13",
    "expo-status-bar": "~3.0.9",
    "expo-web-browser": "^15.0.10",
    "fast-levenshtein": "^3.0.0",
    "lottie-react-native": "~7.3.1",
    "moti": "^0.30.0",
    "razorpay": "^2.9.6",
    "react": "19.1.0",
    "react-dom": "^19.2.3",
    "react-native": "0.81.5",
    "react-native-gesture-handler": "~2.28.0",
    "react-native-mmkv": "^2.12.2",
    "react-native-reanimated": "^4.2.1",
    "react-native-safe-area-context": "~5.6.0",
    "react-native-screens": "~4.16.0",
    "react-native-svg": "^15.12.1",
    "react-native-worklets": "^0.7.1",
    "zustand": "^5.0.10"
  },
  "devDependencies": {
    "@types/react": "~19.1.0",
    "adm-zip": "^0.5.16",
    "cross-env": "^10.1.0",
    "env-cmd": "^11.0.0",
    "jszip": "^3.10.1",
    "typescript": "~5.9.2"
  },
  "private": true
}
